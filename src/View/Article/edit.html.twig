{% extends 'layout.html.twig' %} 

{% block title %}Éditer un article{% endblock %} 

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/edit.css">{% endblock %}

{% block content %}

 
<p>Éditer l'article</p>
<form method="post">
    <label for="title">Titre :</label>
    <input
        type="text"
        name="title"
        id="title"
        value="{{ article.title }}"
        required
    /><br />

    <label for="content">Contenu :</label>
    <textarea name="content" id="content" required>{{
        article.content
    }}</textarea
    ><br />

    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("content");
    </script>

    <label for="image">Image (facultatif) :</label>
    <input
        type="text"
        name="image"
        id="image"
        value="{{ article.image }}"
    /><br />

    <button class="submit" type="submit">enregistrer</button>
</form>
{% endblock %}
