{% extends 'layout.html.twig' %}
 {% block title %}Mot de passe oublié{% endblock %}
 {% block stylesheet %}<link rel="stylesheet" href="/assets/css/forgot_password.css">{% endblock %}
 
{% block content %}

<P>Mot de passe oublié</P>

<form method="post">
    <label for="email">Adresse e-mail :</label>
    <input type="email" name="email" id="email" required /><br />

    <label for="new_password">Nouveau mot de passe :</label>
    <input
        type="password"
        name="new_password"
        id="new_password"
        required
    /><br />

    <button class='submit' type="submit">Réinitialiser le mot de passe</button>
</form>
{% endblock %}
